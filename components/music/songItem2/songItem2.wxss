/* components/songItem2/songItem2.wxss */


.top{
  width: 160rpx;
  height:160rpx;
  position: relative;
}
.image{
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.count{
  display: inline;
  position: absolute;
  border-radius: 10rpx;
  bottom: 6rpx;
  right: 10rpx;
  color: #fff;
  font-size: 22rpx;
  background-color: rgb(94, 90, 90);
}

.bottom .name{
  font-size: 26rpx;
  overflow:hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  text-emphasis: none;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}